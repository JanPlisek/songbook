{
    "id": "nadherna-pavel-novak",
    "title": "Nádherná",
    "artist": [
        "Pavel Novák"
    ],
    "band": [],
    "originalKey": "A",
    "capo": 0,
    "lyrics": [
        {
            "chords": "    A              E            A",
            "text": "1. Já včera ještě nosil blázna šat"
        },
        {
            "chords": "      D           E              A",
            "text": "   a nevěřil jsem na tu sladkou vůni"
        },
        {
            "chords": "         D         E         C#mi       F#mi",
            "text": "   svět otočil se kolem osy jednou jedenkrát"
        },
        {
            "chords": "       D              E      A",
            "text": "   a teď už se mě nemusíte ptát."
        },
        {
            "chords": "    A                        E",
            "text": "R. Nádherná, nádherná, nádherná,"
        },
        {
            "chords": "         D         E              A",
            "text": "   nádherná lásko postůj chvilku dýl"
        },
        {
            "chords": "           D           E             C#mi       F#mi",
            "text": "   ty jsi nejněžnějši tečka ze všech vět ty jsi květ,"
        },
        {
            "chords": "           D            E          A",
            "text": "   co sem slét tys můj šestý světadíl."
        },
        {
            "chords": "",
            "text": "2. Šla městem, pestrý šátek za ni vlál"
        },
        {
            "chords": "",
            "text": "   a ve vlasech ji zahořela růže"
        },
        {
            "chords": "",
            "text": "   já chvilku šel jsem za ní, chvilku vedle ní jsem stál"
        },
        {
            "chords": "",
            "text": "   a v rozpačitém srdci oheň vzplál."
        },
        {
            "chords": "",
            "text": "3. Teď v zahradě snů svoji růži mám"
        },
        {
            "chords": "",
            "text": "   a na její slávu verše píšu"
        },
        {
            "chords": "",
            "text": "   na bílém břehu touhy stojí naší lásky stan"
        },
        {
            "chords": "",
            "text": "   a v něm tu svoji růži objímám."
        }
    ]
}