    "lyrics": [
        {
            "block_start": true,
            "chords": "          Ami",
            "text": "1. Tam, kde leží Little Big Horn, je indiánská zem,"
        },
        {
            "chords": "                                Dmi",
            "text": "   tam přijíždí generál Custer se svým praporem,"
        },
        {
            "chords": "       Ami                      Dmi",
            "text": "   modrý kabáty jezdců, stíny dlouhejch karabin,"
        },
        {
            "chords": "       Ami                                A",
            "text": "   a z indiánskejch signálů po nebi letí dým."
        },
        {
            "block_start": true,
            "chords": "    A                                        E7",
            "text": "R: Říkal to Jim Bridger: já měl jsem v noci sen,"
        },
        {
            "chords": "                                        A",
            "text": "   pod sedmou kavalerií jak krví rudne zem,"
        },
        {
            "chords": "                                               D",
            "text": "   kmen Siouxů je statečný a dobře svůj kraj zná,"
        },
        {
            "chords": "         E7                     A           Ami",
            "text": "   proč Custer neposlouchá ta slova varovná?"
        },
        {
            "block_start": true,
            "chords": "",
            "text": "2. Tam blízko Little Big Hornu šedivou prérií"
        },
        {
            "chords": "",
            "text": "   táhne generál Custer s sedmou kavalerií,"
        },
        {
            "chords": "",
            "text": "   marně mu stopař Bridger radí: zpátky povel dej,"
        },
        {
            "chords": "",
            "text": "   jedinou možnost ještě máš, život si zachovej."
        },
        {
            "block_start": true,
            "chords": "",
            "text": "R:"
        },
        {
            "block_start": true,
            "chords": "",
            "text": "3. Tam blízko Little Big Hornu se vznáší smrti stín,"
        },
        {
            "chords": "",
            "text": "   padají jezdci z koní, výstřely z karabin,"
        },
        {
            "chords": "",
            "text": "   límce modrejch kabátů barví krev červená,"
        },
        {
            "chords": "",
            "text": "   kmen Siouxů je statečný a dobře svůj kraj zná."
        },
        {
            "block_start": true,
            "chords": "",
            "text": "R: Říkal to Jim Bridger: já měl jsem v noci sen,"
        },
        {
            "chords": "",
            "text": "   pod sedmou kavalerií jak krví rudne zem,"
        },
        {
            "chords": "",
            "text": "   kmen Siouxů je statečný a dobře svůj kraj zná,"
        },
        {
            "chords": "",
            "text": "   proč Custer neposlouchal ta slova varovná?"
        },
        {
            "block_start": true,
            "chords": "",
            "text": "4. Pak všechno ztichlo a jen tamtam duní nad krajem,"
        },
        {
            "chords": "",
            "text": "   v oblaku prachu mizí Siouxů vítězný kmen,"
        },
        {
            "chords": "",
            "text": "   cáry vlajky hvězdnatý po kopcích vítr vál,"
        },
        {
            "chords": "",
            "text": "   tam uprostřed svých vojáků leží i generál."
        },
        {
            "block_start": true,
            "chords": "",
            "text": "R:"
        }
    ]
}