    "originalKey": "D",
    "capo": 0,
    "lyrics": [
        {
            "block_start": true,
            "chords": "   G A  D",
            "text": "   Pam pdadadm......"
        },
        {
            "chords": "       D",
            "text": "1. Když jsem byl malý, říkali mi naši:"
        },
        {
            "chords": "",
            "text": "   \"Dobře se uč a jez chytrou kaši,"
        },
        {
            "chords": "   G                    A               D",
            "text": "   až jednou vyrosteš, budeš doktorem práv,"
        },
        {
            "chords": "",
            "text": "   takový doktor sedí pěkně v suchu,"
        },
        {
            "chords": "",
            "text": "   bere velký peníze a škrábe se v uchu,\""
        },
        {
            "chords": "    G                        A                D",
            "text": "   já jim ale na to řek':\"Chci být hlídačem krav.\""
        },
        {
            "block_start": true,
            "chords": "            D",
            "text": "R: Já chci mít čapku s bambulí nahoře,"
        },
        {
            "chords": "",
            "text": "   jíst kaštany, mýt se v lavoře,"
        },
        {
            "chords": "   G                A             D",
            "text": "   od rána po celý den zpívat si jen,"
        },
        {
            "chords": "                         G A D",
            "text": "   zpívat si: pam pam pam padadadadam ..."
        },
        {
            "block_start": true,
            "chords": "",
            "text": "2. K vánocům mi kupovali hromady knih,"
        },
        {
            "chords": "",
            "text": "   co jsem ale vědět chtěl, to nevyčet' jsem z nich:"
        },
        {
            "chords": "",
            "text": "   nikde jsem se nedozvěděl, jak se hlídají krávy,"
        },
        {
            "chords": "",
            "text": "   ptal jsem se starších a ptal jsem se všech,"
        },
        {
            "chords": "",
            "text": "   každý na mě hleděl jako na pytel blech,"
        },
        {
            "chords": "",
            "text": "   každý se mě opatrně tázal na moje zdraví."
        },
        {
            "block_start": true,
            "chords": "",
            "text": "R:"
        },
        {
            "block_start": true,
            "chords": "",
            "text": "3. Dnes už jsem starší a vím, co vím,"
        },
        {
            "chords": "",
            "text": "   mnohé věci nemůžu a mnohé smím,"
        },
        {
            "chords": "",
            "text": "   a když je mi velmi smutno, lehnu si do mokré trávy,"
        },
        {
            "chords": "",
            "text": "   s nohama křížem a s rukama za hlavou"
        },
        {
            "chords": "",
            "text": "   koukám nahoru na oblohu modravou,"
        },
        {
            "chords": "",
            "text": "   kde se mezi mraky honí moje strakaté krávy."
        },
        {
            "block_start": true,
            "chords": "",
            "text": "R:"
        },
        {
            "block_start": true,
            "chords": "",
            "text": "dál v E dur"
        },
        {
            "chords": "",
            "text": "  pam padadadadam..."
        }
    ]
}