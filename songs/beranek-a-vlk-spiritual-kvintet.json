    "lyrics": [
        {
            "block_start": true,
            "chords": "    Dmi     F                 A",
            "text": "R: Riu riu čiu, píseň se tu zpívá,"
        },
        {
            "chords": "                      Dmi    C              Dmi",
            "text": "   : před beránkem v hrůze zlý vlk že se skrývá. :"
        },
        {
            "block_start": true,
            "chords": "    Dmi          F      C           Dmi",
            "text": "1. Ve dne ukryt bývá, stáda v noci loupí,"
        },
        {
            "chords": "    Dmi         F         C            Dmi",
            "text": "   marně Boha vzývá, kdo do cesty mu vstoupí,"
        },
        {
            "chords": "    Dmi         F         Dmi        A",
            "text": "   vale ať dá spáse, vlk nezná slitování,"
        },
        {
            "chords": "       Ami        F           C           Dmi",
            "text": "   jen ovcím vyhýbá se, když beránek je chrání."
        },
        {
            "block_start": true,
            "chords": "",
            "text": "R:"
        },
        {
            "block_start": true,
            "chords": "",
            "text": "2. Čím víc smrt se šíří, tím víc vlk si troufá,"
        },
        {
            "chords": "",
            "text": "   už i do vsí míří, kde v bázni lid si zoufá,"
        },
        {
            "chords": "",
            "text": "   nikdo nemá zdání, že na ty zuby dračí"
        },
        {
            "chords": "",
            "text": "   není třeba zbraní, být s beránkem že stačí."
        },
        {
            "block_start": true,
            "chords": "",
            "text": "R:"
        },
        {
            "block_start": true,
            "chords": "",
            "text": "3. Jednou přijde chvíle, úroky se splácí,"
        },
        {
            "chords": "",
            "text": "   kdo věřil jen síle, ten sílu náhle ztrácí,"
        },
        {
            "chords": "",
            "text": "   vlci strachem vyjí, neboť jim teď zvoní hrana,"
        },
        {
            "chords": "",
            "text": "   že jim srazí šíji dnes od berana rána."
        },
        {
            "block_start": true,
            "chords": "",
            "text": "R:"
        }
    ]
}